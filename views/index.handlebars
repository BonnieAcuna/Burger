<h1>Eat Da Burger!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="bur" name="burger_name">
        <button type="submit">Add Burger</button>
</form>
    </div>

<h2 class="title">Burgers</h2>

<ul class="list">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger-block eaten=devoured}}
      {{/unless}}
    {{/each}}
</ul>

<h2 class="title">Devoured</h2>

<ul class="list">
    {{#each burgers}}
      {{#if devoured}}
       <div>
           <p>{{burger_name}}</p>
       </div>
      {{/if}}
    {{/each}}
</ul>
