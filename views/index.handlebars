<h1>Burgers!</h1>

<h2>Burgers</h2>

<ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger-block eaten=devoured}}
      {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{#each burgers}}
      {{#if devoured}}
       <div>
           <p>{{burger_name}}</p>
       </div>
      {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
    </div>

